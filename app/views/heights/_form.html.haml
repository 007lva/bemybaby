= form_for @height do |f|
  - if @height.errors.any?
    #error_explanation
      %h2= "#{pluralize(@height.errors.count, "error")} prohibited this height from being saved:"
      %ul
        - @height.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :height
    = f.number_field :height
  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :baby_id
    = f.number_field :baby_id
  .actions
    = f.submit 'Save'
