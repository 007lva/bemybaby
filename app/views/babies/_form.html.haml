= form_for @baby do |f|
  - if @baby.errors.any?
    #error_explanation
      %h2= "#{pluralize(@baby.errors.count, "error")} prohibited this baby from being saved:"
      %ul
        - @baby.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :dob
    = f.date_select :dob
  .field
    = f.label :gender
    = f.select :gender, ['niño', 'niña']
  .field
    = f.label :blood_type
    = f.select :blood_type, Baby.blood_types.keys
  .actions
    = f.submit 'Save'
