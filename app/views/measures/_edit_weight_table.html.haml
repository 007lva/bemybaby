- @weight=SchContact.new unless @weight
= form_with(model: @weight, remote: true, format: :js) do |form|
  %table.table
    %thead
      %tr
        %th.text-left{ width: '8%' }
          - if @weight.id
            = link_to delete_weight_path(@weight.id),  class: "btn btn-danger float-left",method: 'delete', title:'Borrar Contacto', data: { confirm: 'La altura se borrará de la base de datos.<br> ¿Estás seguro?' },remote: true, format: :js do
              %i.fa.fa-trash-alt
        %th
          =form.number_field :weight, class:"form-control", placeholder: "Peso", required: true
        %th
          =form.text_field :date, id: :datepicker, value: Date.today.strftime("%d/%m/%Y"), class:"form-control", placeholder: "fecha"
        %th.text-right{ width: '8%' }
          = form.button type: "submit", id: :submit, title:'Crear Peso', class: "btn btn-secondary float-right float-right" do
            %i.fa.fa-check
    %tbody
      - @baby.weights.each do |weight|
        %tr{class: "#{'select-gray' if @weight.id==weight.id}"}
          %td
          %td.text-center= weight.date.strftime("%d/%m/%Y")
          %td.text-center= weight.weight
          %td.text-right
            = link_to edit_weight_path(weight.id),  class: "btn btn-light float-right", title:"Editar Altura", remote: true, format: :js do
              %i.fa.fa-edit

:javascript
  $('#datepicker').datepicker({format: 'dd/mm/yyyy'})