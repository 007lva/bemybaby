= form_for @weight do |f|
  - if @weight.errors.any?
    #error_explanation
      %h2= "#{pluralize(@weight.errors.count, "error")} prohibited this weight from being saved:"
      %ul
        - @weight.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :weight
    = f.number_field :weight
  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :baby_id
    = f.number_field :baby_id
  .actions
    = f.submit 'Save'
