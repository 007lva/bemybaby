.row.justify-content-center
  .col-md-5
    .card.p-4
      .card-header.text-center.text-uppercase.h4.font-weight-light
        Please Sign Up
      .card-body.py-5
        = bootstrap_form_for(@user, layout: :horizontal) do |f|
          = f.text_field :name, layout: :default
          = f.text_field :last_name, layout: :default
          = f.email_field :email, layout: :default
          = f.password_field :password, layout: :default
          = f.password_field :password_confirmation, layout: :default
          = f.form_group do
            = f.submit
